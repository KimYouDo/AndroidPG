<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gigabyte_p15f.lifecycle_v5.SecondActivity">

    <Button
        android:id="@+id/backBtn"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Second Activity\n종료하기"
        android:textSize="22dp"
        android:layout_centerInParent="true"
        android:layout_width="250dp" />

    <TextView
        android:id="@+id/txtMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backBtn"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="위의 버튼을 누르면 이 액티비티가 종료합니다.\n그러면 스택에 있는 Main Activity가 화면에 나타납니다."
        android:textSize="14dp"
        android:textColor="#ffad6535" />

</RelativeLayout>